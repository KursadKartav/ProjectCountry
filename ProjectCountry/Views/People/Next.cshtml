@model ProjectCountry.Models.Person
@{
    ViewData["Title"] = "Next";
}

<h1>Next</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Next">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label" hidden></label>
                <select asp-for="Name" asp-items="ViewBag.Ad" class="form-control-sm" hidden>
                    </select>
                @*<input type="text" class="form-control" id="Ad"
                       name="Ad" value="@(ViewBag.Ad ?? String.Empty)">*@
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label" hidden></label>
                <select asp-for="LastName" asp-items="ViewBag.Soyad" class="form-control-sm" hidden>
                </select>
                @*<input type="text" class="form-control" id="Soyad"
                       name="Soyad" value="@(ViewBag.Soyad ?? String.Empty)">*@
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Tel" class="control-label"></label>
                <input asp-for="Tel" class="form-control" />
                <span asp-validation-for="Tel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>
